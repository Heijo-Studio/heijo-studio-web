---
import Logo from './Logo.astro';
import NavItem from './NavItem.astro';

const navItems = [
  { name: 'works', href: '/works' },
  { name: 'about', href: '/about' },
  { name: 'contact', href: '/contact' },
  { name: 'store', href: '/store' },
];
---

<header
  class="fixed top-0 left-0 w-full max-w-full bg-white/50 px-8 py-3 backdrop-blur-md"
>
  <div class="container flex w-full max-w-full items-center justify-between">
    <a href="/">
      <Logo />
    </a>

    <nav>
      <ul class="flex items-center gap-x-8">
        {navItems.map((item) => <NavItem href={item.href} text={item.name} />)}
      </ul>
    </nav>
  </div>
</header>
