---
import { NAV_ITEMS } from 'src/constants';

const currentYear = new Date().getFullYear();
---

<footer class="w-full px-8 py-4">
  <div class="container flex w-full max-w-full items-center justify-between">
    <nav>
      <ul class="flex items-center gap-x-6">
        {
          NAV_ITEMS.map((item) => (
            <li>
              <a
                class="font-inter text-light-gray text-sm lowercase"
                href={item.href}
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

