---
export const prerender = true;

import MainLayout from '@layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import heroImage from '@assets/images/hero.webp';
---

<MainLayout>
  <main class="container w-full max-w-full flex-1 overflow-hidden">
    <section class="flex h-full w-full flex-col">
      <div class="flex-1 overflow-hidden">
        <Image
          src={heroImage}
          alt="hero-image"
          class="h-full w-full object-cover"
        />
      </div>

      <h1
        class="font-inter absolute top-[35%] right-[10%] max-w-md text-4xl font-bold text-white"
      >
        Connecting the dots with multi-disciplinary design solutions
      </h1>
    </section>
  </main>
</MainLayout>
